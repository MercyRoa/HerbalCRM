- model_class = Note
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:lead_id) + ':'
  %br
  = @note.lead_id
%p
  %strong= model_class.human_attribute_name(:created_by) + ':'
  %br
  = @note.created_by
%p
  %strong= model_class.human_attribute_name(:assigned_to) + ':'
  %br
  = @note.assigned_to
%p
  %strong= model_class.human_attribute_name(:due_date) + ':'
  %br
  = @note.due_date
%p
  %strong= model_class.human_attribute_name(:done) + ':'
  %br
  = @note.done
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @note.text

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), notes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_note_path(@note), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), note_path(@note), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

= form_for @scheduled_message, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :account_id, :class => 'control-label'
    .controls
      = f.number_field :account_id, :class => 'number_field'
  .control-group
    = f.label :lead_id, :class => 'control-label'
    .controls
      = f.number_field :lead_id, :class => 'number_field'
  .control-group
    = f.label :to, :class => 'control-label'
    .controls
      = f.text_field :to, :class => 'text_field'
  .control-group
    = f.label :cc, :class => 'control-label'
    .controls
      = f.text_field :cc, :class => 'text_field'
  .control-group
    = f.label :bcc, :class => 'control-label'
    .controls
      = f.text_field :bcc, :class => 'text_field'
  .control-group
    = f.label :subject, :class => 'control-label'
    .controls
      = f.text_field :subject, :class => 'text_field'
  .control-group
    = f.label :body, :class => 'control-label'
    .controls
      = f.text_area :body, :class => 'text_area'
  .control-group
    = f.label :body_html, :class => 'control-label'
    .controls
      = f.text_area :body_html, :class => 'text_area'
  .control-group
    = f.label :scheduled, :class => 'control-label'
    .controls
      = f.datetime_select :scheduled, :class => 'datetime_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("Cancel")), scheduled_messages_path, :class => 'btn'
    = link_to t('.destroy', :default => t("Destroy")), scheduled_message_path(@scheduled_message), :method => :delete,
     :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

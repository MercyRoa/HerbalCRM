- model_class = ScheduledMessage
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:account_id)
      %th= model_class.human_attribute_name(:lead_id)
      %th= model_class.human_attribute_name(:subject)
      %th= model_class.human_attribute_name(:scheduled)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @scheduled_messages.each do |scheduled_message|
      %tr
        %td= scheduled_message.account
        %td
          = scheduled_message.lead
          = scheduled_message.to
          = scheduled_message.bcc
        %td= scheduled_message.subject
        %td= scheduled_message.scheduled
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_scheduled_message_path(scheduled_message), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), scheduled_message_path(scheduled_message), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_scheduled_message_path, :class => 'btn btn-primary'

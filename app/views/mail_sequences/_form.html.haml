= form_for @mail_sequence, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :campaign_id, :class => 'control-label'
    .controls
      = f.collection_select(:campaign_id, Campaign.all, :id, :name, :prompt => true)
  .control-group
    = f.label :step, :class => 'control-label'
    .controls
      = f.number_field :step, :class => 'number_field'
  .control-group
    = f.label :subject, :class => 'control-label'
    .controls
      = f.text_field :subject, :class => 'text_field'
  .control-group
    = f.label :body_text, :class => 'control-label'
    .controls
      = f.text_area :body_text, :class => 'text_area'
  .control-group
    = f.label :body_html, :class => 'control-label'
    .controls
      = f.text_area :body_html, :class => 'text_area'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :send_after, :class => 'control-label'
    .controls
      = f.number_field :send_after, :class => 'number_field'
  .control-group
    = f.label :automatic, :class => 'control-label'
    .controls
      = f.check_box :automatic, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), mail_sequences_path, :class => 'btn'
